Imports System.Data.SqlClient
Public Class fprducto
    Inherits conexion
    Dim cmd As New SqlCommand
    Public Function mostrar_product() As DataTable
        Try
            conectare()
            cmd = New SqlCommand("mostrar_cat_avios")
            cmd.CommandType = CommandType.StoredProcedure
            cmd.Connection = cnn
            If cmd.ExecuteNonQuery Then
                Dim dt As New DataTable
                Dim da As New SqlDataAdapter(cmd)
                da.Fill(dt)
                Return dt
            Else
                Return Nothing

            End If
        Catch ex As Exception
            MsgBox(ex.Message)
            Return Nothing
        Finally
            desconectar()

        End Try
    End Function
